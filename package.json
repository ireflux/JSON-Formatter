{
  "name": "json-formatter",
  "version": "2.0.0",
  "description": "A modern, optimized JSON formatter using Vue 3 and Monaco Editor with enhanced performance and accessibility",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "build:prod": "npm run type-check && vite build",
    "analyze": "vite build --mode analyze"
  },
  "dependencies": {
    "@monaco-editor/loader": "^1.3.2",
    "monaco-editor": "^0.55.1",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/tsconfig": "^0.4.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.9",
    "vite-bundle-analyzer": "^0.7.0"
  },
  "keywords": [
    "json",
    "formatter",
    "vue3",
    "monaco-editor",
    "typescript",
    "accessibility",
    "performance"
  ],
  "author": "JSON Formatter Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ireflux/JSON-Formatter.git"
  },
  "bugs": {
    "url": "https://github.com/ireflux/JSON-Formatter/issues"
  },
  "homepage": "https://ireflux.github.io/JSON-Formatter/"
}
